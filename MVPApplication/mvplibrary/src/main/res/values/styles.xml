<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="android:Widget.Holo.Light.Button"/>
    <!--********************* Button *********************-->
    <style name="RoundButton" parent="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:padding">0dp</item>--><!-- 不用 android:padding，而用各个方向分别指定 padding，方便子类覆盖 -->
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="qmui_isRadiusAdjustBounds">true</item>
        <item name="qmui_backgroundColor">@color/comm_transparent</item>
        <item name="qmui_borderWidth">?attr/qmui_round_btn_border_width</item>
        <item name="qmui_borderColor">?attr/qmui_round_btn_border_color</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!--********************* Loading *********************-->
    <style name="AppCommonTheme.Loading">
        <item name="qmui_loading_view_size">?attr/qmui_loading_size</item>
        <item name="android:color">?attr/qmui_loading_color</item>
    </style>

    <style name="QMUI.TipDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="qmui_tip_dialog_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">?attr/qmui_tip_dialog_min_width</item>
        <item name="android:minHeight">?attr/qmui_tip_dialog_min_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">?attr/qmui_content_spacing_horizontal</item>
        <item name="android:layout_marginRight">?attr/qmui_content_spacing_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">?attr/qmui_tip_dialog_padding_horizontal</item>
        <item name="android:paddingRight">?attr/qmui_tip_dialog_padding_horizontal</item>
        <item name="android:paddingTop">?attr/qmui_tip_dialog_padding_vertical</item>
        <item name="android:paddingBottom">?attr/qmui_tip_dialog_padding_vertical</item>
        <item name="android:background">?attr/qmui_tip_dialog_bg</item>
    </style>
</resources>