<resources>
    <!-- main theme color -->
    <attr name="themeColorSecondary" format="color" />

    <declare-styleable name="TintDrawableHelper">
        <!-- support tint background color -->
        <attr name="backgroundTint" />
        <attr name="backgroundTintMode" />
        <attr name="foregroundTint" format="color" />
        <attr name="foregroundTintMode">
            <enum name="src_over" value="3" />
            <enum name="src_in" value="5" />
            <enum name="src_atop" value="9" />
            <enum name="multiply" value="14" />
            <enum name="screen" value="15" />
        </attr>
        <attr name="imageTint" format="color" />
        <attr name="imageTintMode">
            <enum name="src_over" value="3" />
            <enum name="src_in" value="5" />
            <enum name="src_atop" value="9" />
            <enum name="multiply" value="14" />
            <enum name="screen" value="15" />
        </attr>
        <attr name="drawableLeftTint" format="color" />
        <attr name="drawableLeftTintMode">
            <enum name="src_over" value="3" />
            <enum name="src_in" value="5" />
            <enum name="src_atop" value="9" />
            <enum name="multiply" value="14" />
            <enum name="screen" value="15" />
        </attr>
        <attr name="drawableTopTint" format="color" />
        <attr name="drawableTopTintMode">
            <enum name="src_over" value="3" />
            <enum name="src_in" value="5" />
            <enum name="src_atop" value="9" />
            <enum name="multiply" value="14" />
            <enum name="screen" value="15" />
        </attr>
        <attr name="drawableRightTint" format="color" />
        <attr name="drawableRightTintMode">
            <enum name="src_over" value="3" />
            <enum name="src_in" value="5" />
            <enum name="src_atop" value="9" />
            <enum name="multiply" value="14" />
            <enum name="screen" value="15" />
        </attr>
        <attr name="drawableBottomTint" format="color" />
        <attr name="drawableBottomTintMode">
            <enum name="src_over" value="3" />
            <enum name="src_in" value="5" />
            <enum name="src_atop" value="9" />
            <enum name="multiply" value="14" />
            <enum name="screen" value="15" />
        </attr>
        <attr name="compoundButtonTint" format="color" />
        <attr name="compoundButtonTintMode">
            <enum name="src_over" value="3" />
            <enum name="src_in" value="5" />
            <enum name="src_atop" value="9" />
            <enum name="multiply" value="14" />
            <enum name="screen" value="15" />
        </attr>
        <attr name="drawableTint" format="color" />
        <attr name="drawableTintMode">
            <enum name="src_over" value="3" />
            <enum name="src_in" value="5" />
            <enum name="src_atop" value="9" />
            <enum name="multiply" value="14" />
            <enum name="screen" value="15" />
        </attr>
        <attr name="progressTint" format="color" />
        <attr name="progressIndeterminateTint" format="color" />
    </declare-styleable>

    <declare-styleable name="TintTextView">
        <attr name="backgroundTint" />
        <attr name="backgroundTintMode" />
        <attr name="drawableLeftTint" />
        <attr name="drawableLeftTintMode" />
        <attr name="drawableRightTint" />
        <attr name="drawableRightTintMode" />
        <attr name="drawableTopTint" />
        <attr name="drawableTopTintMode" />
        <attr name="drawableBottomTint" />
        <attr name="drawableBottomTintMode" />
    </declare-styleable>

    <declare-styleable name="TintButton">
        <attr name="backgroundTint" />
        <attr name="backgroundTintMode" />
    </declare-styleable>

    <declare-styleable name="TintEditText">
        <attr name="backgroundTint" />
        <attr name="backgroundTintMode" />
        <attr name="drawableLeftTint" />
        <attr name="drawableLeftTintMode" />
        <attr name="drawableRightTint" />
        <attr name="drawableRightTintMode" />
        <attr name="drawableTopTint" />
        <attr name="drawableTopTintMode" />
        <attr name="drawableBottomTint" />
        <attr name="drawableBottomTintMode" />
    </declare-styleable>

    <declare-styleable name="TintImageView">
        <attr name="backgroundTint" />
        <attr name="backgroundTintMode" />
        <attr name="imageTint" />
        <attr name="imageTintMode" />
    </declare-styleable>

    <declare-styleable name="TintCheckBox">
        <attr name="backgroundTint" />
        <attr name="backgroundTintMode" />
        <attr name="compoundButtonTint" />
        <attr name="compoundButtonTintMode" />
    </declare-styleable>

    <declare-styleable name="TintRadioButton">
        <attr name="backgroundTint" />
        <attr name="backgroundTintMode" />
        <attr name="compoundButtonTint" />
        <attr name="compoundButtonTintMode" />
    </declare-styleable>

    <declare-styleable name="TintFrameLayout">
        <attr name="backgroundTint" />
        <attr name="backgroundTintMode" />
        <attr name="foregroundTint" />
        <attr name="foregroundTintMode" />
    </declare-styleable>

    <declare-styleable name="TintRelativeLayout">
        <attr name="backgroundTint" />
        <attr name="backgroundTintMode" />
    </declare-styleable>

    <declare-styleable name="TintLinearLayout">
        <attr name="backgroundTint" />
        <attr name="backgroundTintMode" />
    </declare-styleable>

    <declare-styleable name="TintGridLayout">
        <attr name="backgroundTint" />
        <attr name="backgroundTintMode" />
    </declare-styleable>

    <declare-styleable name="TintToolbar">
        <attr name="backgroundTint" />
        <attr name="backgroundTintMode" />
    </declare-styleable>

    <declare-styleable name="TintAppBarLayout">
        <attr name="backgroundTint" />
        <attr name="backgroundTintMode" />
    </declare-styleable>

    <declare-styleable name="TintProgressBar">
        <attr name="progressTint" />
        <attr name="progressIndeterminateTint" />
    </declare-styleable>

    <declare-styleable name="TintView">
        <attr name="backgroundTint" />
        <attr name="backgroundTintMode" />
    </declare-styleable>

    <declare-styleable name="TintAutoCompleteTextView">
        <attr name="backgroundTint" />
        <attr name="backgroundTintMode" />
        <attr name="drawableLeftTint" />
        <attr name="drawableLeftTintMode" />
        <attr name="drawableRightTint" />
        <attr name="drawableRightTintMode" />
        <attr name="drawableTopTint" />
        <attr name="drawableTopTintMode" />
        <attr name="drawableBottomTint" />
        <attr name="drawableBottomTintMode" />
    </declare-styleable>

    <declare-styleable name="TintCheckedTextView">
        <attr name="drawableLeftTint" />
    </declare-styleable>

</resources>